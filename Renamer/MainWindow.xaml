<Window x:Class="Renamer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Renamer"
        Title="Renamer" Height="550" Width="1500"
        ResizeMode="CanResize" SizeToContent="Height"
        MinWidth="800" MinHeight="550"
        FontFamily="Arial" FontSize="16"
        Background="Gray" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GridSplitter Grid.Column="1" Grid.RowSpan="13" ShowsPreview="False" Width="3"
                      HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
        
        <TextBlock x:Name="search" Grid.Row="0" Grid.Column="0"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Padding="5"
                   Text="Найти" TextAlignment="Center"/>
        <TextBlock x:Name="replace" Grid.Row="0" Grid.Column="2"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Padding="5"
                   Text="Заменить на" TextAlignment="Center"/>

        <TextBox x:Name="search1" Grid.Row="1" Grid.Column="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <TextBox x:Name="replace1" Grid.Row="1" Grid.Column="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <TextBox x:Name="search2" Grid.Row="2" Grid.Column="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <TextBox x:Name="replace2" Grid.Row="2" Grid.Column="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <TextBox x:Name="search3" Grid.Row="3" Grid.Column="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <TextBox x:Name="replace3" Grid.Row="3" Grid.Column="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <TextBox x:Name="search4" Grid.Row="4" Grid.Column="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <TextBox x:Name="replace4" Grid.Row="4" Grid.Column="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <TextBox x:Name="search5" Grid.Row="5" Grid.Column="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <TextBox x:Name="replace5" Grid.Row="5" Grid.Column="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <TextBox x:Name="search6" Grid.Row="6" Grid.Column="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <TextBox x:Name="replace6" Grid.Row="6" Grid.Column="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <TextBox x:Name="search7" Grid.Row="7" Grid.Column="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <TextBox x:Name="replace7" Grid.Row="7" Grid.Column="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <TextBox x:Name="search8" Grid.Row="8" Grid.Column="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <TextBox x:Name="replace8" Grid.Row="8" Grid.Column="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <TextBox x:Name="search9" Grid.Row="9" Grid.Column="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <TextBox x:Name="replace9" Grid.Row="9" Grid.Column="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <TextBox x:Name="search10" Grid.Row="10" Grid.Column="0"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
        <TextBox x:Name="replace10" Grid.Row="10" Grid.Column="2"
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" Padding="5"
                 TextAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

        <TextBlock x:Name="wildcards" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2"
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5" Padding="5"
                   Text='Использовать подстановочный знак "?"' TextAlignment="Center"/>
        <CheckBox x:Name="check_wildcards" Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2"
                   HorizontalAlignment="Left" VerticalAlignment="Center" Margin="320,5,5,5" Padding="5">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2"/>
            </CheckBox.LayoutTransform>
        </CheckBox>
        
        <Button x:Name="startButtonFields" Grid.Row="12" Grid.Column="0" MinHeight="40" Width="450"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5" Padding="5"
                Content="Заменить поля и принудительно обновить" Click="startButtonFields_Click"/>
        <Button x:Name="startButton" Grid.Row="12" Grid.Column="2" MinHeight="40" Width="250"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,5,5,5" Padding="5"
                Content="Заменить всё" Click="startButton_Click"/>
    </Grid>
</Window>

